<h1>Inscription</h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </div>
 
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :"Date de Naissance" %><br />
    <%= f.date_select :date, :start_year=>1985, :use_month_numbers=>true, :order=>[:day, :month, :year]%>
  </div>

  <div class="field">
    <%= f.label :"Poids actuel" %><br />
    <%= f.text_field :poids_actu, type: "number" %>
  </div>

  <div class="field">
    <%= f.label :"Poids idÃ©al" %><br />
    <%= f.text_field :poids_ideal, type: "number" %>
  </div>
  
  <div class="field">
    <%= f.label :taille %><br />
    <%= f.text_field :taille %>
  </div>
  
  <div class="field">
      <%= f.check_box :faire_sport, :valeur_on=>1, :valeur_off=>0 %>
      <%= f.label :"faites-vous du sport actuellement?" %>
  </div>

  <div class="field">
      <%= f.check_box :aimer_faire_sport, :valeur_on=>1, :valeur_off=>0 %>
      <%= f.label :"aimeriez-vous faire du sport?" %>
  </div>

  <div class="field">
    <%= f.label :"Joindre le CV " %>
    <%= f.file_field :cv %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>
